                            <button class="form-btn edit-content">
                                Editar datos
                            </button>
                            <button type="submit"
                                class="form-btn submit-form form-btn-inactive send-user-info-form-btn">
                                Guardar cambios
                            </button>
                        </div>
                    </form>

