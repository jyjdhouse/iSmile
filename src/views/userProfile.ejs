                                            <input class="numeric-only-input" type="text" name="dni"
                                                value="<%=user.dni || null%>"
                                                placeholder="<%= !user.dni && 'Ingresar DNI'%>">
                                        </div>
                                    </li>

                                </ul>
                            </div>

