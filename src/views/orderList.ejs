<!DOCTYPE html>
<html lang="en">

<head>
        <%- include('./partials/head.ejs') %>
        <link rel="stylesheet" href="/css/orderList.css">
        <script src="/scripts/orderList.js" type="module"></script>
        <title>Ventas</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>
        <main class="main">
            <div class="loading-spinner">
                <p>Cargando Ventas...</p>
                <%- include('./partials/loadingSpinner.ejs') %>
            </div>
            <section class="filter-search-section">
                <p class="filter-section-title">Filtar ventas por <span class="clean-filters">Limpiar filtros</span></p>
                <p class="filter-section-disclaimer">Ventas de las ultimas 2 semanas</p>
                <input type="text" class="filter-order-input" placeholder="Busqueda por ID de venta">
                <select id="filter-order-select">
                    <option value="0">Seleccione estado</option>
                    <% orderStatus.forEach(status => { %>
                        <option value="<%= status.id %>"><%= status.status %></option>
                    <% }) %>
                </select>
            </section>
            <section class="pagination-section"></section>
            <table class="order-table"> 
                <thead>
                    <tr>
                        <th>ID venta</th>
                        <th>Nombre</th>
                        <th>Total</th>
                        <th>Items</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se agregarán las filas con los datos de las ventas -->
                </tbody>
            </table>
            <div class="order-detail-popup"></div>
        </main>

        <%- include('./partials/footer.ejs') %>
</body>

</html>