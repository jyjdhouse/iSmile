<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>


        <link rel="stylesheet" href="/css/productCreate.css" type="text/css">
        <script src="/scripts/productCreate.js" type="module"></script>
        <title>Creación producto</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>

        <main class="product-create-main">
            <h2 class="product-create-title uppercase">CREAción PRODUCTO</h2>

            <form action="/product/create" class="create-product-form" enctype="multipart/form-data" method="POST">
                <div class="input-label-container">
                    <label for="name" class="bold">Nombre</label>
                    <input type="text" name="name" class="required">
                </div>
                <div class="input-label-container">
                    <label for="category" class="bold">Categoría</label>
                    <select name="category" id="" class="required">
                        <% categories.forEach(cat=> { %>
                            <option value="<%= cat.id %>">
                                <%=cat.category%>
                            </option>
                            <% }) %>

                    </select>
                </div>
                <div class="input-label-container">
                    <label for="description" class="bold">Descripción</label>
                    <textarea name="description" id="" cols="30" rows="10"></textarea>
                </div>
                <div class="input-label-container price-container">
                    <label for="">Solo numeros <span class="grey">(si no se completa es 0)</span></label>
                    <div class="field">
                        <label for="price" class="bold">Precio</label>
                        <input type="text" name="price" class="required numeric-only-input" placeholder="5000">
                    </div>
                    <div class="field">
                        <label for="discount" class="bold">Descuento</label>
                        <input type="text" name="discount" class="required numeric-only-input" placeholder="10" value="0">
                    </div>
                    <div class="field">
                        <label for="stock" class="bold">Stock</label>
                        <input type="text" name="stock" class="required numeric-only-input" placeholder="40" value="0">
                    </div>
                </div>
                <div class="input-label-container price-container">
                    <label for="">CARACTERISTICAS <span class="grey">(separador decimal con ".")</span></label>
                    <div class="field volume-field">
                        <label for="volume" class="bold">Volumen (m³)</label>
                        <input type="text" name="volume"  class="required-input float-only-input" placeholder="0.05">
                    </div>
                    <div class="field volume-field">
                        <label for="weight" class="bold">Peso (kg)</label>
                        <input type="text" name="weight"  class="required float-only-input" placeholder="0.5">
                    </div>
                </div>
                <div class="input-label-container">
                    <label for="images" class="bold">Imagenes</label>
                    <input type="file" name="images" multiple class="files">
                </div>
                <div class="images-radio-content-wrapper">
                    <label for="main-img" class="bold">Selecciónar 1er imagen</label>
                    <div class="images-radio-box-wrapper"></div>
                </div>
                <div class="input-label-container">
                    <label for="images" class="bold">Ingredientes</label>
                    <textarea name="ingredients" cols="30" rows="10"></textarea>
                </div>
                <div class="input-label-container">
                    <label for="images" class="bold">Tamaño</label>
                    <textarea name="size" cols="30" rows="10"
                        placeholder="1 lata de 30 sobres de Xgr cada uno"></textarea>
                </div>
                <button type="submit">Crear</button>

            </form>

            </div>
        </main>
        <%- include('./partials/footer.ejs') %>
</body>

</html>